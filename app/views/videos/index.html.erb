<div class="container">
  <div class="col-md-12 py-5">
    <% @videos.each_with_index do |video, i| %>
      <% if i % 3 == 0 || i == 0 %>
      <div class="row card-deck">
      <% end %>
        <div class="col-md-4 video-top-div">
          <div class="card mb-4 box-shadow">
            <%= link_to(video, class: 'card-body video-card-body') do %>
              <img class="card-img-top" src="<%= video.thumbnail %>">
              <p class="card-text video-list-p"><%= video.title %></p>
            <% end %>
          </div>
        </div>
      <% if (i+1) % 3 == 0 || @videos.last == video %>
      </div>
      <% end %>
    <% end %>
  </div>
</div>