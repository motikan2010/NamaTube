<div class="container">
  <div class="col-md-6 offset-md-3 py-5">
    <form action="/videos" method="post">
      <div class="form-group">
        <label>Title</label>
        <input type="text" class="form-control col-md-12" name="title" value="<%= @video_title %>">
      </div>
      <div class="embed-responsive embed-responsive-16by9">
        <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/<%= @video_id %>" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
      </div>
      <%= hidden_field_tag 'video_id', @video_id %>
      <%= hidden_field_tag 'authenticity_token', form_authenticity_token %>
      <div class="col-md-12 py-1">
        <button type="button" class="btn btn-warning col-md-2 offset-md-3" onclick="window.history.back();">Back</button>
        <button type="submit" class="btn btn-primary col-md-2 offset-md-2">Save</button>
      </div>
    </form>
  </div>
</div>